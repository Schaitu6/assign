<center>

    <h1><%= @user.username %> Profile </h1>
    <%= gravatar_for @user ,size:200 %> <br>
     <% if logged_in? && @user == current_user %>
    <%= link_to "Edit your profile", edit_user_path(@user) %> <br>
    <%= button_to "Delete your profile", user_path(current_user), method: :delete %>
    <% end %>
    <%= link_to "Back to home", root_path %> <br> |
    <%= link_to 'Logout', logout_path , data: { "turbo-method": :delete} %>
    <%= will_paginate @articles %>
    <%= render 'articles/article' %>

</center>