<% if @article.errors.any? %>
<h2> The following validations prevented the article from creating</h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
    <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :title%> <br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description%><br/>
        <%= f.text_area :description %>
    </p>
     <p>
        <%= f.label :category %><br/>
        <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Select"},{multiple:true}) %>
    </p>
    <p>
        <%= f.submit %>
    </p>

<%end%>
<%= link_to "Back to articles listing", articles_path %>